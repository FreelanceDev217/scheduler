#:kivy 1.0.9

<HCC>:
    cols: 1
    
<GridLayout>:
    BoxLayout:
        size: (1, .7)
        canvas:
            Rectangle:
                pos: self.pos
                size: self.size
                source: 'HCC.jpg'
    BoxLayout:
        size_hint: (1, .3)
        orientation: 'vertical'
        Button:
            size_hint_x: 1
            pos_hint: {'y':0}
            text: 'View Schedule'
            
        Button:
            size_hint_x: 1
            pos_hint: {'y':0}
            text: 'Register'
            
        Button:
            size_hint_x: 1
            pos_hint: {'y':0}
            text: 'Administrator'
            



<RootScreen>:
    StartScreen:
    
<StartScreen>:
    name: "start"
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'HCC.jpg' 
            